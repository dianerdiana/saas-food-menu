import ProductCart from "@/views/product/components/astro/product-cart.astro";

const response = {
  data: [
    {
      id: "1",
      store_id: "2",
      name: "Spicy Ramen Level 3",
      description: "Rich broth, spicy and tempting, with chashu topping",
      price: 45000,
      slug: "spicy-ramen-level-3",
      image:
        "https://ik.imagekit.io/dianerdiana/saas-food-menu/products/default/ramen.png",
      category: {
        id: "2",
        name: "Ramen",
        image: "",
        slug: "",
