      note: "",
    },
    {
      id: "2",
      store_id: "2",
      name: "Chicken Karaage",
      description: "Crispy Japanese-style fried chicken, served with a tangy",
      price: 48000,
      slug: "spicy-ramen-level-3",
      image:
        "https://ik.imagekit.io/dianerdiana/saas-food-menu/products/default/Fried%20Chicken%20High%20Angle%20Shot.png",
