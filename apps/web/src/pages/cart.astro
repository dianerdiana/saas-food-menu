---
import Container from "@/components/astro/container.astro";
import BlankLayout from "@/layouts/blank-layout.astro";
import ProductCart from "@/views/product/components/astro/product-cart.astro";
import { ArrowLeft } from "lucide-react";

const response = {
  data: [
    {
      id: "1",
      store_id: "2",
      name: "Spicy Ramen Level 3",
      description: "Rich broth, spicy and tempting, with chashu topping",
      price: 45000,
      slug: "spicy-ramen-level-3",
      image:
        "https://ik.imagekit.io/dianerdiana/saas-food-menu/photos/ramen.png",
      category: {
        id: "2",
        name: "Ramen",
        image: "",
        slug: "",
      },
      note: "",
    },
    {
      id: "2",
      store_id: "2",
      name: "Chicken Karaage",
      description: "Crispy Japanese-style fried chicken, served with a tangy",
      price: 48000,
      slug: "spicy-ramen-level-3",
      image:
        "https://ik.imagekit.io/dianerdiana/saas-food-menu/photos/Fried%20Chicken%20High%20Angle%20Shot.png",
      category: {
        id: "2",
        name: "Chicken",
        image: "",
        slug: "",
      },
      note: "",
    },
  ],
};
---

<BlankLayout class="pb-32">
  <Container slot="header">
    <header
      id="TopNav"
      class="relative flex items-center justify-between px-5 py-3 bg-white"
    >
      <a
        href="/"
        class="w-12 h-12 flex items-center justify-center shrink-0 rounded-full overflow-hidden bg-background"
      >
        <ArrowLeft />
      </a>
      <p class="font-semibold">My Cart</p>
      <div class="dummy-btn w-12"></div>
    </header>
  </Container>
  <Container slot={"main"}>
    <div id="Cart" class="flex flex-col gap-3 mt-4 px-5">
      {response.data.map((product) => <ProductCart product={product} />)}
    </div>

    <div
      class="fixed inset-x-0 bottom-0 max-w-160 z-50 bg-white shadow-sm mx-auto"
    >
      <div class="flex items-center justify-between p-5">
        <div class="flex flex-col gap-2">
          <p class="text-muted-foreground font-normal text-sm">Total Price</p>
          <p class="font-semibold text-lg" id="totalAmount">Rp 0</p>
        </div>

        <a
          href="customer-information.html"
          type="button"
          class="flex justify-center rounded-full py-3.5 px-7 bg-primary font-normal text-white"
        >
          Checkout
        </a>
      </div>
    </div>
  </Container>
</BlankLayout>
