---
import "@workspace/ui/globals.css";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
}

const {
  title = "SaaS Food Menu",
  description = "Platform menu digital untuk restoran",
  canonical,
} = Astro.props;

/**
 * Caching for public pages
 */
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=300, stale-while-revalidate=600",
);
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />

    {canonical && <link rel="canonical" href={canonical} />}

    <!-- SEO slot -->
    <slot name="seo" />

    <!-- Schema slot -->
    <slot name="schema" />
  </head>

  <body>
    <slot />

    <slot name="navigation-bottom" />
  </body>
</html>
