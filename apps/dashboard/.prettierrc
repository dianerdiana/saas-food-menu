{
  "printWidth": 120,
  "tabWidth": 2,
  "trailingComma": "all",
  "singleQuote": true,
  "semi": true,
  "htmlWhitespaceSensitivity": "ignore",
  "jsxSingleQuote": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react",
    "^vite",
    "^@/config(.*)$",
    "^@workspace/ui",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)$",
    "^./",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
