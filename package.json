{
  "name": "turborepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:web": "pnpm dev --filter web dev",
    "dev:dashboard": "pnpm dev --filter dashboard dev",
    "dev:server": "pnpm dev --filter server dev",
    "build:server": "turbo build --filter=server",
    "start:server": "pnpm --filter=server start:prod"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.7.4",
    "turbo": "^2.7.1",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=20"
  }
}
